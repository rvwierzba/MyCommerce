@model VendedorModel

@{
    <h1 style="text-align: center">Cadastro de Vendedor</h1>

    <br />

    <form asp-asp-controller="Vendedor" asp-action="Cadastro" method="post">
        <input type="hidden" asp-for="Id" value="@try{@ViewBag.Vendedor.Id} catch{}"/>

        <div class="form-group">
            <label>Nome</label>
            <input asp-for="Nome" type="text" class="form-control" value="@try{
            @ViewBag.Vendedor.Nome
            } catch{}" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

       
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" value="@try{
            @ViewBag.Vendedor.Email
            } catch{}" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button class="btn btn-block btn-success" type="submit" style="width: 100%">Cadastrar Vendedor</button>
    </form>
}
